<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
 <navigation-rule>
  <from-view-id>/addTask.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>add_success</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>add_abort</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/index.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>del_success</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>edit</from-outcome>
   <to-view-id>/editTask.xhtml</to-view-id>
   <redirect include-view-params="true"/>
  </navigation-case>
  <navigation-case>
   <from-outcome>add</from-outcome>
   <to-view-id>/addTask.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/editTask.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>upd_success</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>upd_abort</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <application>
  <locale-config>
   <default-locale>de</default-locale>
   <supported-locale>en</supported-locale>
  </locale-config>
  <resource-bundle>
   <base-name>org.random_access.todo.internationalization.messages</base-name>
   <var>msg</var>
  </resource-bundle>
 </application>
</faces-config>
